@model IEnumerable<NorthwindileMVC.Models.Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Sharred/_LayoutPage1.cshtml";
}

<div class="pageTitle">
    <h2 style="float:left">Kategoriler</h2>
    <a href="@Url.Action("Create","Category")"class="addButton"> + Kategori Ekle
    </a>
    <div style="clear:both"> </div>
</div>
<div class="formContainer">
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th>Isim</th>
            <th>Açıklama</th>
            <th>Seçenekler</th>
        </tr>
        @foreach (NorthwindileMVC.Models.Categories item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new {id=item.CategoryID})" class="tablebutton edit">Düzenle</a>
                    <a href="@Url.Action("Delete", "Category", new {id=item.CategoryID})" class="tablebutton delete">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>


@section styles{
    <link href="~/Assets/css/FormStyle.css" rel="stylesheet" />
}


