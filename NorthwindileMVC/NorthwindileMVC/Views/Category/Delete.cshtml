@model NorthwindileMVC.Models.Categories
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Sharred/_LayoutPage1.cshtml";
}


@section styles{
    <link href="~/Assets/css/FormStyle.css" rel="stylesheet" />
}

<div class="pageTitle">
    <h2>Kategori Sil</h2>
</div>

<div class="formContainer">
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <th width="10%" style="color:white">ID</th>
            <td>@Model.CategoryID</td>
        </tr>
        <tr>
            <th style="color:white">Isim</th>
            <td>@Model.CategoryName</td>
        </tr>
        <tr>
            <th style="color:white">Açıklama</th>
            <td>@Model.Description</td>
        </tr>
    </table>
    @if (Model.Products.Count == 0)
    {
        <div class="deleteAccess">
            <label><strong>Bağlı ürün sayısı=@Model.Products.Count </strong>Bu kategori silme işlemi için müsait</label>
        </div>
        <div class="deleteBase">
            @using (Html.BeginForm())
            {
                <input type="submit" class="submitButton" value="Sil" />
                <a href="@Url.Action("Index","Category")">Kategoriler Listesine Dön</a>
            }
        </div>
    }
    else
    {
        <div class="deleteNotAccess">
            <label><strong>Bağlı ürün sayısı=@Model.Products.Count </strong>Bu kategori silme işlemi için müsait değil</label>
        </div>
        <div class="deleteBase">
            <a href="@Url.Action("Index","Category")">Kategoriler Listesine Dön</a>
        </div>
    }
</div>

