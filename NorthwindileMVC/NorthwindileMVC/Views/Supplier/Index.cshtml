
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Sharred/_LayoutPage1.cshtml";
}

<div class="pageTitle">
    <h2 style="float:left">Tedarikçiler</h2>
    <a href="@Url.Action("Create","Supplier")" class="addButton"> + Tedarikçi Ekle</a>
    <div style="clear:both"></div>
</div>

<div class="formContainer">
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th>Şirket Adı</th>
            <th>İletişim Adı</th>
            <th>Adres</th>
            <th>Şehir</th>
            <th>Bölge</th>
            <th>Posta Kodu</th>
            <th>Ülke</th>
            <th>Telefon</th>
            <th>Fax</th>
            <th>Seçenekler</th>
        </tr>

        @foreach (NorthwindileMVC.Models.Suppliers item in Model)
        {
            <tr>
                <td>@item.SupplierID</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Region</td>
                <td>@item.PostalCode</td>
                <td>@item.Country</td>
                <td>@item.Phone</td>
                <td>@item.Fax</td>
                <td>
                    <a href="@Url.Action("Edit", "Supplier", new { id = item.SupplierID })" class="tablebutton edit">Düzenle</a>
                    <a href="@Url.Action("Delete", "Supplier", new { id = item.SupplierID })" class="tablebutton delete">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>
@section styles{
    <link href="~/Assets/css/FormStyle.css" rel="stylesheet" />
}

