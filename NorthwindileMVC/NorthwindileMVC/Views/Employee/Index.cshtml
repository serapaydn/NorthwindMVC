@model IEnumerable<NorthwindileMVC.Models.Employees>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Sharred/_LayoutPage1.cshtml";
}

<div class="pageTitle">
    <h2 style="float:left">Çalışanlar</h2>
    <a href="@Url.Action("Create", "Employee")" class="addButton"> + Çalışan Ekle</a>
    <div style="clear:both"></div>
</div>
<div class="formContainer">
    <table class="formTable" cellpadding="0" cellspacing="0">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Unvan</th>
            <th>Doğum Tarihi</th>
            <th>Adres</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Telefon</th>
            <th>Kullanıcı Adı</th>
            <th>Şifre</th>
            <th>Seçenekler</th>
        </tr>
        @foreach (NorthwindileMVC.Models.Employees item in Model)
        {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Title</td>
                <td>@item.BirthDate</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.HomePhone</td> 
                <td>@item.Username</td> 
                <td>@item.Password</td>
                <td>
                    <a href="@Url.Action("Edit", "Employee", new { id = item.EmployeeID })" class="tablebutton edit">Düzenle</a>
                    <a href="@Url.Action("Delete", "Employee", new { id = item.EmployeeID })" class="tablebutton delete">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>

@section styles{
    <link href="~/Assets/css/FormStyle.css" rel="stylesheet" />
}
